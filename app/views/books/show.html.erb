<p style="color: green"><%= notice %></p>

<%= render @book %>

<div>
  <p>
  <%= image_tag @book.image, width: "200" %>
  </p>

  <h2>Review Form</h2>
 <%= form_with(model: @book_review, local:true) do |form| %>
 <div class="field">
    <%= form.text_area:review %>
    <%= form.hidden_field :book_id, :value => @book.id %>
 </div>
 <h2>Review List</h2>
 <ul>
     <% @book.book_review.each do |book_review| %>
     <li>
         <%= book_review.review %>
         (<i><%= book_review.user_id %></i>)
     </li>
     <% end %>
 </ul>
 <div class="actions">
     <%= form.submit %>
 </div>
 <% end %>

  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", books_path %>
  <p>
  <strong>Detail:</strong>
  <%= @book.detail %>
</p>
  <%= button_to "Destroy this book", @book, method: :delete %>
</div>
